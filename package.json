{
    "name": "sna-fileviewer",
    "displayName": "SNA-FileViewer",
    "description": "A viewer for ZX Spectrum snapshot (.sna) files.",
    "version": "1.5.2-rc1",
    "publisher": "maziac",
    "author": {
        "name": "Thomas Busse"
    },

    "license": "MIT",
    "keywords": [
        "assembler",
        "snapshot",
        "sna",
        "zx",
        "spectrum"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/maziac/sna-fileviewer"
    },
    "engines": {
        "vscode": "^1.98.0"
    },
    "icon": "assets/local/icon.png",
    "categories": [
        "Visualization"
    ],
    "activationEvents": [
        "onCommand:sna-fileviewer.openSna"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "main": "./out/extension",
    "contributes": {
        "customEditors": [
            {
                "viewType": "sna-fileviewer.viewer",
                "displayName": "ZX SNA File Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.sna"
                    }
                ],
                "priority": "default"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-node -- --minify && npm run esbuild-browser -- --minify",
        "esbuild-browser": "esbuild ./src/html/main.ts --bundle --outdir=out/html --platform=browser",
        "watch-node": "npm run esbuild-node -- --watch --sourcemap",
        "watch-browser": "npm run esbuild-browser -- --sourcemap --watch",
        "package": "vsce package",
        "esbuild-node": "node esbuild-node.config.js"
    },
    "dependencies": {
        "@vscode/extension-telemetry": "^0.9.8",
        "gif-writer": "^0.9.4"
    },
    "devDependencies": {
        "@types/node": "^16.11.4",
        "@types/vscode": "^1.98.0",
        "@types/vscode-webview": "^1.57.0",
        "esbuild": "^0.25.3",
        "source-map-support": "^0.5.21",
        "typescript": "^4.4.4"
    }
}
